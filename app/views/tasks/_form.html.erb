<div class="card p-4">

  <%= form_with(model: @task, local: true, class: "row g-3") do |form| %>

    <div class="col-md-6">
      <%= form.label :title, class: "form-label" %>
      <%= form.text_field :title, class: "form-control", placeholder: "Enter task title" %>
      <% @task.errors[:title].each do |error| %>
        <p class="text-red-500 text-sm mt-1"><%= error %></p>
      <% end %>
    </div>

    <div class="col-md-6">
      <%= form.label :priority, class: "form-label" %>
      <%= form.select :priority, options_for_select([["Low", 1], ["Medium", 2], ["High", 3]], @task.priority), {}, class: "form-select" %>
    </div>  

    <div class="col-md-12">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_area :description, class: "form-control", rows: 3, placeholder: "Enter task details" %>
      <% @task.errors[:description].each do |error| %>
        <p class="text-red-500 text-sm mt-1"><%= error %></p>
      <% end %>
    </div>

    <div class="col-md-6">
      <%= form.label :due_date, class: k"form-label" %>
      <%= form.date_field :due_date, class: "form-control", min: Date.today.to_s %>
      <% @task.errors[:due_date].each do |error| %>
        <p class="text-red-500 text-sm mt-1"><%= error %></p>
      <% end %>
    </div>

    <div class="col-12">
      <%= form.submit "Save Task", class: "btn btn-success" %>
    </div>

  <% end %>
</div>
